<h1 class="center">Image: <%= @image.description %><%= link_to '&#127991;'.html_safe, new_image_tag_path(@image) %></h1>
<%= image_tag(@image.image.url, class: "img-responsive") %>

<% if current_user == @image.user %>
<div class="btn-group">
  <%= link_to "Edit", edit_image_path(@image), :class => "btn btn-primary" %>
  <%= link_to "Delete", image_path(@image), :class => "btn btn-danger", :data => {:confirm => "You Sure?", :method => 'delete'} %>
</div>
<% end %>


<hr>

<%= link_to "Back to Homepage", images_path %>
